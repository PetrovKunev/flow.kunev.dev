@page
@model IndexModel
@{
    ViewData["Title"] = "Управление на профила";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h1 class="text-primary">@ViewData["Title"]</h1>
<p class="text-muted mb-4">Променете настройките на вашия профил</p>

<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-8">
        <div class="card border-primary">
            <div class="card-header">
                <h4 class="card-title mb-0">
                    <i class="fas fa-user me-2"></i>Профил
                </h4>
            </div>
            <div class="card-body">
                <form id="profile-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Username" class="form-control" placeholder="Изберете потребителско име." />
                        <label asp-for="Input.Username" class="form-label">Потребителско име</label>
                        <span asp-validation-for="Input.Username" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Въведете телефонен номер." />
                        <label asp-for="Input.PhoneNumber" class="form-label">Телефонен номер</label>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>

                    <button id="update-profile-button" type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-save me-2"></i>Запази
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}