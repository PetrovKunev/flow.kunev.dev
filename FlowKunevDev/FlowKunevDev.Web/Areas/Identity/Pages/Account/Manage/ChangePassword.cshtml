@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Смяна на парола";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h1 class="text-primary">@ViewData["Title"]</h1>
<p class="text-muted mb-4">Променете паролата за достъп до вашия профил</p>

<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-8">
        <div class="card border-warning">
            <div class="card-header">
                <h4 class="card-title mb-0">
                    <i class="fas fa-key me-2"></i>Промяна на парола
                </h4>
            </div>
            <div class="card-body">
                <form id="change-password-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Въведете текущата парола." />
                        <label asp-for="Input.OldPassword" class="form-label">Текуща парола</label>
                        <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Въведете новата парола" />
                        <label asp-for="Input.NewPassword" class="form-label">Нова парола</label>
                        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Потвърдете новата парола." />
                        <label asp-for="Input.ConfirmPassword" class="form-label">Потвърдете паролата</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-warning btn-lg">
                        <i class="fas fa-save me-2"></i>Актуализирай паролата
                    </button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card border-info">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-shield-alt me-2"></i>Изисквания за парола
                </h5>
            </div>
            <div class="card-body">
                <p class="small"><strong>Паролата трябва да съдържа:</strong></p>
                <ul class="small">
                    <li>Поне 6 символа</li>
                    <li>Главни и малки букви</li>
                    <li>Поне една цифра</li>
                    <li>Поне един специален символ</li>
                </ul>

                <hr>

                <div class="alert alert-warning py-2">
                    <i class="fas fa-exclamation-triangle me-1"></i>
                    <small><strong>Съвет:</strong> Използвайте силна парола за по-добра сигурност.</small>
                </div>
            </div>
        </div>

        <div class="card border-success mt-3">
            <div class="card-body">
                <h6 class="card-title">
                    <i class="fas fa-lightbulb me-2"></i>Препоръки
                </h6>
                <p class="card-text small">
                    Редовно сменяйте паролата си и не я споделяйте с други хора.
                    Избягвайте използването на лична информация в паролата.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Показване на силата на паролата
        document.getElementById('Input_NewPassword').addEventListener('input', function() {
            // Тук може да добавите логика за показване на силата на паролата
        });

        // Потвърждение при submit
        document.getElementById('change-password-form').addEventListener('submit', function(e) {
            var newPassword = document.getElementById('Input_NewPassword').value;
            var confirmPassword = document.getElementById('Input_ConfirmPassword').value;

            if (newPassword !== confirmPassword) {
                e.preventDefault();
                alert('Новата парола и потвърждението не съвпадат!');
            }
        });
    </script>
}