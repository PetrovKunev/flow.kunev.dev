@model FlowKunevDev.Services.DTOs.TransactionDto

@{
    ViewData["Title"] = "Изтриване на Транзакция";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">
                    <i class="fas fa-exclamation-triangle"></i>
                    @ViewData["Title"]
                </h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="fas fa-warning"></i>
                    <strong>Внимание!</strong> Тази операция ще изтрие транзакцията безвъзвратно.
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">@Model.Description</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Сметка:</strong> @Model.AccountName</p>
                                <p>
                                    <strong>Категория:</strong>
                                    <span class="badge rounded-pill" style="background-color:@Model.CategoryColor; color:white">
                                        @Model.CategoryName
                                    </span>
                                </p>
                            </div>
                            <div class="col-md-6 text-md-end">
                                <h4 class="text-@(Model.Type == FlowKunevDev.Common.TransactionType.Income ? "success" : "danger")">
                                    @(Model.Type == FlowKunevDev.Common.TransactionType.Income ? "+" : "-")@Model.Amount.ToString("F2") лв.
                                </h4>
                                <p class="text-muted mb-0">@Model.Date.ToString("dd.MM.yyyy HH:mm")</p>
                            </div>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Notes))
                        {
                            <div class="mt-3">
                                <strong>Бележки:</strong>
                                <p class="text-muted">@Model.Notes</p>
                            </div>
                        }
                    </div>
                </div>

                <form asp-action="Delete" method="post">
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="confirmDelete" required>
                        <label class="form-check-label" for="confirmDelete">
                            Потвърждавам изтриването на транзакцията от <strong>@Model.Date.ToString("dd.MM.yyyy")</strong>
                            на стойност <strong>@Model.Amount.ToString("F2") лв.</strong>
                        </label>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-secondary me-md-2">
                            <i class="fas fa-times"></i> Отказ
                        </a>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info me-md-2">
                            <i class="fas fa-eye"></i> Детайли
                        </a>
                        <button type="submit" class="btn btn-danger" id="deleteButton" disabled>
                            <i class="fas fa-trash"></i> Изтрий
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#confirmDelete').change(function () {
                $('#deleteButton').prop('disabled', !this.checked);
            });

            $('form').submit(function (e) {
                if (!$('#confirmDelete').is(':checked')) {
                    e.preventDefault();
                    alert('Моля, потвърдете изтриването.');
                    return false;
                }

                return confirm('Сигурни ли сте? Транзакцията ще бъде изтрита безвъзвратно.');
            });
        });
    </script>
}